{
  "name": "uifork",
  "version": "1.0.0",
  "description": "A CLI tool and React components for managing UI component versions and switching between them",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "uifork": "./cli.js"
  },
  "files": [
    "dist",
    "cli.js",
    "lib"
  ],
  "scripts": {
    "build:css": "sass src/components/UIFork.module.scss src/components/UIFork.module.css --no-source-map",
    "watch:css": "sass --watch src/components/UIFork.module.scss:src/components/UIFork.module.css --no-source-map",
    "build": "npm run build:css && tsup",
    "dev": "npm run build:css && tsup --watch",
    "dev:css": "npm run watch:css",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ui",
    "components",
    "versioning",
    "cli",
    "switcher",
    "react",
    "ab-testing"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.0",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "motion": "^12.29.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.77.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
