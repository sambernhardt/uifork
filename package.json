{
  "name": "uifork",
  "version": "0.0.3",
  "private": true,
  "description": "Monorepo for uifork - CLI tool and React components for managing UI component versions",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev",
    "sandbox": "turbo run dev --filter=sandbox",
    "sandbox:full": "turbo run dev --filter=uifork --filter=sandbox",
    "sandbox:watch": "cd apps/sandbox && npm run watch",
    "dev:uifork": "turbo run dev --filter=uifork",
    "test": "turbo run test",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix"
  },
  "keywords": [
    "ui",
    "components",
    "versioning",
    "cli",
    "switcher",
    "react",
    "ab-testing",
    "monorepo"
  ],
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "oxlint": "^1.42.0",
    "turbo": "^2.8.0"
  },
  "packageManager": "npm@10.9.0"
}
