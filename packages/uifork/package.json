{
  "name": "uifork",
  "version": "0.0.7-beta.3",
  "description": "CLI tool and React components for managing UI component versions and switching between them",
  "keywords": [
    "ab-testing",
    "cli",
    "components",
    "react",
    "switcher",
    "ui",
    "versioning"
  ],
  "license": "MIT",
  "bin": {
    "uifork": "./cli.js"
  },
  "files": [
    "dist",
    "cli.js",
    "lib",
    "version-sync.js"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./style.css": "./dist/style.css",
    "./auto-init": {
      "import": "./dist/auto-init.mjs",
      "require": "./dist/auto-init.js"
    },
    "./global": "./dist/index.global.js",
    "./global.css": "./dist/index.global.css"
  },
  "scripts": {
    "build": "vite build && vite build --config vite.global.config.ts",
    "build:lib": "vite build",
    "build:global": "vite build --config vite.global.config.ts",
    "dev": "vite build --watch",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@floating-ui/dom": "^1.6.0",
    "@tabler/icons-react": "^3.36.1",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "motion": "^12.29.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-preserve-directives": "^1.1.3",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
